<h3>
  Select the options for your playlist
</h3>
<%= form_with path: playlist_path, method: "post", class: "form-group" do |f| %>
  <%= f.hidden_field :token, value: @token %>

  <div>
    <%= f.label "Genre" %>
    <%= f.select :genre, options_for_select(@genres.map(&:capitalize)),
                 {class: "form-control", prompt: "Select a genre"} %>
  </div>
  <div>
    <%= f.label "Workout Type" %>
    <%= f.select :workout, options_for_select(%w[Strength-Training Cardio HIIT Yoga Recovery]),
                 {class: "form-control", prompt: "Select a workout"} %>
  </div>
  <%= f.submit "Create My Playlist", class: "btn btn-primary" %>
<% end %>